<%= stylesheet_link_tag 'jquery-ui-1.8.15.custom', 'tipsy' %>
<div class="form">
  <h1 class="spotlight"><%= t('application.reports.attendances_by_wickets_per_day.name') %></h1>
  <div class="search" style="width:95%; margin-bottom: 30px">
    <%= form_tag( attendances_by_wickets_per_day_reports_path, :method => "get" ) do %>
      <%= label_tag t('application.reports.since') %>
      <%= text_field_tag :start_date, nil, :class => "date from", :readonly => true %>
      <%= label_tag t('application.reports.to') %>
      <%= text_field_tag :end_date, nil, :class => "date to", :readonly => true %>
      <%= submit_tag( t('application.search'), :class => "button medium" ) %>
    <% end %>
  </div>

  <div id="graph" class="graph"></div>
  <% if @attendances_per_day %>
    <table>
      <tr>
        <th><%= "Guiche" %></th>
        <th><%= "Data" %></th>
        <th><%= "Quantidade" %></th>
      </tr>
      <% @attendances_per_day.each do |call_history| %>
	    <tr><td rowspan="<%=call_history[1].values[0].size + 1 %>"><%= call_history[0]%></td></tr>
		  <% call_history[1].values[0].each_with_index do |val, index| %>
		    <tr class="row">
				<td><%= call_history[1][:dates][index]%>
				<td><%= val %></td>
			  </tr>
		  <% end %>
      <% end %>
    </table>
    <div class="print">
      <%= link_to t('application.reports.print'), attendances_by_wickets_per_day_reports_path( :start_date => params[:start_date], :end_date => params[:end_date], :format => 'pdf' ), :class => "button medium" %>
    </div>
  <% end %>
  <%= javascript_include_tag 'protovis', 'report_attendances_by_wickets_per_day', 'jquery.tipsy', 'report', 'tipsy' %>
  <script type='text/javascript'>
    renderProtovis(<%= @attendances_per_day.to_json.html_safe %>);
  </script>
</div>
