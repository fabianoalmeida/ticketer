<%= stylesheet_link_tag 'jquery-ui-1.8.15.custom', 'tipsy' %>
<div class="form">
  <h1 class="spotlight"><%= t('application.reports.attendances_by_wickets_per_day.name') %></h1>
  <div class="search" style="width:95%; margin-bottom: 30px">
    <%= form_tag( attendances_by_wickets_per_day_reports_path, :method => "get" ) do %>
      <%= label_tag t('application.reports.since') %>
      <%= text_field_tag :start_date, nil, :class => "date from", :readonly => true %>
      <%= label_tag t('application.reports.to') %>
      <%= text_field_tag :end_date, nil, :class => "date to", :readonly => true %>
      <%= submit_tag( t('application.search'), :class => "button medium" ) %>
    <% end %>
  </div>

  <div id="graph" class="graph"></div>
  <% unless @attendances_per_day.nil? || @attendances_per_day.empty? %>
    <table>
      <tr>
        <th style="text-align: center;"><%= t('activerecord.models.wicket') %></th>
        <th style="text-align: center;"><%= t('application.reports.attendances_by_wickets_per_day.date') %></th>
        <th style="text-align: center;"><%= t('application.reports.attendances_by_wickets_per_day.quantity') %></th>
      </tr>
      <% total= 0 %>
      <% length= 0 %>
      <% @attendances_per_day.each do |call_history| %>
		<% length += call_history[1].values[0].size %>
        <tr>
          <td width="180px" style="text-align: center; background-color : white" rowspan="<%=call_history[1].values[0].size + 1 %>"><%= call_history[0]%></td>
        </tr>
        <% call_history[1].values[0].each_with_index do |val, index| %>
          <% current_date = call_history[1][:dates][index].to_date %>
          <tr>
            <td width="40%" style="text-align: center;"><%= l(current_date, :format => :default) %> (<%=l(current_date, :format => '%A') %>)</td>
            <td width="40%" style="text-align: center;"><%= val %></td>
          </tr>
          <% total += val %>
        <% end %>
      <% end %>
        <tr>
          <td colspan="2" style="text-align: right;"><%= t('application.reports.average') %></td>
          <td style="text-align: center;"><%= total / length %></td>
        </tr>
        <tr>
          <td colspan="2" style="text-align: right;"><%= t('application.reports.total') %></td>
          <td style="text-align: center;"><%= total %></td>
        </tr>
    </table>
    <div class="print">
      <%= link_to t('application.reports.print'), attendances_by_wickets_per_day_reports_path( :start_date => params[:start_date], :end_date => params[:end_date], :format => 'pdf' ), :class => "button medium" %>
    </div>
  <% end %>
  <%= javascript_include_tag 'protovis', 'attendances_by_wickets', 'jquery.tipsy', 'report', 'tipsy' %>
  <script type='text/javascript'>
    renderProtovis(<%= @attendances_per_day.to_json.html_safe %>);
  </script>
</div>
