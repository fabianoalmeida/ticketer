<style type="text/css" media="screen">
path {
    stroke: #C5E008;
    stroke-width: 5;
    fill: none;
}
 
line {
    stroke: gray;
}
 
text {
    font-family: Arial;
    font-size: 9pt;
}
</style>
<%= stylesheet_link_tag 'jquery-ui-1.8.15.custom', 'tipsy' %>
<div class="form">
  <h1 class="spotlight"><%= t('application.reports.waiting_time_by_client.name') %></h1>
  <div class="search" style="width:95%; margin-bottom: 30px">
    <%= form_tag( waiting_time_by_client_reports_path, :method => "get" ) do %>
      <%= label_tag t('application.reports.since') %>
      <%= text_field_tag :start_date, nil, :class => "date from", :readonly => true %>
      <%= label_tag t('application.reports.to') %>
      <%= text_field_tag :end_date, nil, :class => "date to", :readonly => true %>
      <%= submit_tag( t('application.search'), :class => "button medium" ) %>
    <% end %>
  </div>
  <div id="graph" class="graph" style="text-align:center"></div>
  <div id="center2"></div>

  <% if @waiting_time_by_client %>
    <table>
      <tr>
        <th><%= t('activerecord.models.wicket') %></th>
        <th><%= t('application.reports.attendances_by_wickets_per_day.date') %></th>
        <th><%= t('application.reports.attendances_by_wickets_per_day.quantity') %></th>
      </tr>
      <% total= 0 %>
      <% length= @waiting_time_by_client.length %>
      <% @waiting_time_by_client.each do |call_history| %>
        <tr>
          <td rowspan="<%=call_history[1].values[0].size + 1 %>"><%= call_history[0]%></td>
        </tr>
        <% call_history[1].values[0].each_with_index do |val, index| %>
          <tr class="row">
            <td><%= call_history[1][:dates][index] %></td>
            <td><%= val %></td>
          </tr>
          <% total += val %>
        <% end %>
      <% end %>
        <tr>
          <td colspan="2" style="text-align: right;"><%= t('application.reports.average') %></td>
          <td style="text-align: center;"><%= total / length %></td>
        </tr>
        <tr>
          <td colspan="2" style="text-align: right;"><%= t('application.reports.total') %></td>
          <td style="text-align: center;"><%= total %></td>
        </tr>
    </table>
    <div class="print">
      <%= link_to t('application.reports.print'), waiting_time_by_client_reports_path( :start_date => params[:start_date], :end_date => params[:end_date], :format => 'pdf' ), :class => "button medium" %>
    </div>
  <% end %>

  <%= javascript_include_tag 'd3', 'jquery.tipsy', 'd3.time', 'waiting_time_by_client', 'report' %>

  <script type='text/javascript'>
    new WaitingTimeByClientD3({element : "#graph", data : <%= @waiting_time_by_client.to_json.html_safe %> });
  </script>
</div>
