<div class="form">
  <div class="place-spot">
    <%= "#{t('model.ticket_type_group.name')}: " %><b><%= @ticket_type_group.value %></b>
  </div>
  <div class="search">
    <input type="text" value="search" id="search"/>
    <%= link_to image_tag("form/search.png") + t('application.search') , "#", :class => "button medium"%>
  </div>
  <table>
    <tr>
      <th><%= t('model.ticket_type.name_pluralize') %></th>
      <th><%= t('model.ticket_type.acronym') %></th>
      <th><%= t('model.ticket_type.priority.name') %></th>
      <th><%= t('model.status.name') %></th>
      <th colspan="2" class="options"><%= t("application.options") %></th>
    </tr>
    <% @ticket_types.each do |ticket_type| %>
      <tr class="row">
        <td width="60%"><%= ticket_type.value %></td>
        <td width="20%"><%= ticket_type.acronym %></td>
        <td width="10%"><%= ticket_type.priority ? t('model.ticket_type.priority.sure') : t('model.ticket_type.priority.not') %></td>
        <td width="20%"><%= ticket_type.active?  ? t('model.status.active') : t('model.status.inactive') %></td>
        <td>
          <%= link_to  image_tag("form/search.gif"), ticket_type_group_ticket_type_path(ticket_type.ticket_type_group, ticket_type), :title => t('model.show') %>
        </td>
        <td>
          <%= link_to  image_tag("form/edit.gif"), edit_ticket_type_group_ticket_type_path(ticket_type.ticket_type_group, ticket_type), :title => t('model.edit')%>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<div class="buttons-nav">
  <%= link_to t('model.ticket_type.new'), new_ticket_type_group_ticket_type_path(@ticket_type_group) ,:class => "button medium" %>
  <%= link_to t('model.ticket_type_group.back'), ticket_type_groups_path,:class => "button medium" %>
</div>
