<h1>Listing tickets</h1>

<table>
  <tr>
    <th>Value</th>
    <th>Ticket Type</th>
    <th>Status ticket</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tickets.each do |ticket| %>
  <tr>
    <td><%= ticket.value %></td>
    <td><%= ticket.ticket_type.value %></td>
    <td><%= ticket.status_ticket.value %></td>
    <td><%= link_to 'Show', ticket %></td>
    <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
    <td><%= link_to 'Destroy', ticket, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

