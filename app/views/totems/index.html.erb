<h1>Listing totems</h1>

<table>
  <tr>
    <th>Value</th>
    <th>Ip</th>
    <th>Status</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @totems.each do |totem| %>
  <tr>
    <td><%= totem.value %></td>
    <td><%= totem.ip %></td>
    <td><%= totem.status_id %></td>
    <td><%= totem.user %></td>
    <td><%= link_to 'Show', totem %></td>
    <td><%= link_to 'Edit', edit_totem_path(totem) %></td>
    <td><%= link_to 'Destroy', totem, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

