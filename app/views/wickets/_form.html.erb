<%= form_for([@place, @wicket]) do |f| %>
  <%= f.hidden_field :place_id, :value => params[:place_id] %>
  <% if @wicket.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @wicket.errors.full_messages.each do |msg| %>
        <li class="form-msg-error"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid-12-12">
    <%= f.label :value, :class => "form-lbl form-req" %>
    <%= f.text_field :value, :maxlength => 80, :size => 30, :class => "form-txt form-small", :disabled => disabled %>
  </div>

  <div class="grid-12-12">
    <%= f.label :ticket_type_group, :class => "form-lbl form-req" %>
    <% if @place && !@place.ticket_type_groups.empty? && disabled %>
      <input type="text" value="<%= @place.local.des_local %>" disabled="disabled" class="form-txt form-small" />
    <% elsif %>
      <%= f.collection_select( :ticket_type_group_id,
                              @ticket_type_groups,
                              :id, :value,
                              { :prompt => true },
                              :class => "form-small", :disabled => disabled ) %>
    <% end %>
  </div>

  <div class="grid-12-12">
    <%= f.label :guidance, :class => "form-lbl form-req"%>
    <ul class="form-list-rdo">
      <li>
        <%= f.radio_button :guidance, "false" , :disabled => disabled%>
        <%= f.label t('model.wicket.guidance.left'), :class => "form-lbl" %>
      </li>
      <li>
        <%= f.radio_button :guidance, "true" , :disabled => disabled%>
        <%= f.label t('model.wicket.guidance.right'), :class => "form-lbl"%>
      </li>
    </ul>
  </div>

  <div class="grid-12-12">
    <%= f.label :priority, :class => "form-lbl form-req"%>
    <ul class="form-list-rdo">
      <li>
        <%= f.radio_button :priority, "true", :disabled => disabled  %>
        <%= f.label t('model.wicket.priority.sure'), :class => "form-lbl" %>
      </li>
      <li>
        <%= f.radio_button :priority, "false", :disabled => disabled  %>
        <%= f.label t('model.wicket.priority.not'), :class => "form-lbl"%>
      </li>
    </ul>
  </div>

  <div class="grid-12-12">
    <%= f.label :second_level, :class => "form-lbl form-req"%>
    <ul class="form-list-rdo">
      <li>
        <%= f.radio_button :second_level, "true", :disabled => disabled  %>
        <%= f.label t('model.wicket.second_level.sure'), :class => "form-lbl" %>
      </li>
      <li>
        <%= f.radio_button :second_level, "false", :disabled => disabled  %>
        <%= f.label t('model.wicket.second_level.not'), :class => "form-lbl"%>
      </li>
    </ul>
  </div>

  <div class="grid-12-12">
    <%= f.label :status, :class => "form-lbl form-req"%>
    <ul class="form-list-rdo">
      <% Status.all.each do |status| %>
        <li>
          <%= f.radio_button :status_id, status.id , :disabled => disabled  %>
          <%= f.label status.value, :class => "form-lbl" %>
        </li>
      <% end %>
    </ul>
  </div>
  <% unless disabled %>
    <div class="grid-7-12 field-button field-clear">
      <%= f.submit :class => "button form-right medium" %>
    </div>
  <%end%>
<% end %>
